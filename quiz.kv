<QuizScreen>:
    canvas.before:
        Color:
            rgba: self.bg_color
        Rectangle:
            pos: self.pos
            size: self.size
    question_label: question
    result_label: result
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: question
            text: ''
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: root.answer_buttons[0] if root.answer_buttons else ''
                on_press: root.check_answer(self.text)
            Button:
                text: root.answer_buttons[1] if root.answer_buttons else ''
                on_press: root.check_answer(self.text)
            Button:
                text: root.answer_buttons[2] if root.answer_buttons else ''
                on_press: root.check_answer(self.text)
        Label:
            id: result
            text: ''
        Label:
            text: f"Score: {root.score}"
        Label:
            text: f"Time: {root.time_elapsed}"

<ResultScreen>:
    canvas.before:
        Color:
            rgba: self.bg_color
        Rectangle:
            pos: self.pos
            size: self.size
    score_label: score
    time_label: time
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: score
            text: ''
        Label:
            id: time
            text: ''
<CustomScreen>:
    canvas.before:
        Color:
            rgba: self.bg_color
        Rectangle:
            pos: self.pos
            size: self.size