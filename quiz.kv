#:kivy 2.2.1
# quiz.kv

<QuizScreen>:
    question_label: question
    result_label: result

    BoxLayout:
        orientation: 'vertical'
        Label:
            id: question
            text: ''
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: root.answer_buttons[0] if root.answer_buttons else ''
                on_press: root.check_answer(self.text)
            Button:
                text: root.answer_buttons[1] if root.answer_buttons else ''
                on_press: root.check_answer(self.text)
            Button:
                text: root.answer_buttons[2] if root.answer_buttons else ''
                on_press: root.check_answer(self.text)
        Label:
            id: result
            text: ''
